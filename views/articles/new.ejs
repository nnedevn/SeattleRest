<h2 class="text-center">New Post</h2>

<form method="post" action="/articles">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="title" placeholder="topic of article" class="form-control">
  </div>
<!-- </form>
<form method="Post" action="/articles"> -->
  <div class="form-group">
    <label for="author">Author:</label>
    <select name="authorId" class="form-control" id="author" required>
      
      <%authors.forEach(function(author){%>

      <option value="<%=author.id%>">
        <%=author.firstName%> <%=author.lastName%>
      </option>


      <%});%>

      

    </select>
  </div>
<!-- </form>
<form method="Post" action="/articles"> -->
  <div class="form-group">
    <label for="content">Content:</label>
    <textarea name="content" class="form-control"></textarea>
  </div>
  <input type="submit" value="Create Article" class="btn btn-success">
</form>